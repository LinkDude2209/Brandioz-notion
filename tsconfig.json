{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noEmit": false,
    "types": [
      "node",
      "jest"
    ],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Set the base URL for path resolution
    "paths": {
      "@/*": [
        "src/*"
      ] // Map @/ to src/ directory
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "test"
  ]
}
